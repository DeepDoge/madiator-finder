datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

enum LbryUrlType {
    Video
    Channel
}

model LbryUrlMap {
    id        String      @id() @map("_id")
    lbryUrl   String
    scrapDate BigInt
    type      LbryUrlType
    foundBy   Profile?    @relation(fields: [profilePublicKey], references: [publicKey], onDelete: SetNull, onUpdate: Cascade)

    profilePublicKey String?
    @@unique([id, lbryUrl])
    @@index([type])
    @@index([type, id])
    @@index([profilePublicKey])
    @@index([profilePublicKey, type])
}

model Profile {
    publicKey  String       @id @map("_id")
    nickname   String?
    LbryUrlMap LbryUrlMap[]
}
