datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

enum LbryUrlType {
    Video
    Channel
}

model LbryUrlMap {
    id        String
    lbryUrl   String
    scrapDate BigInt
    type      LbryUrlType
    foundBy   Profile?    @relation(fields: [profilePublicKey], references: [publicKey], onDelete: SetNull, onUpdate: Cascade)

    profilePublicKey String?
    @@id([id, lbryUrl])
    @@index([type])
    @@index([type, id])
    @@index([profilePublicKey])
    @@index([profilePublicKey, type])
}

model Profile {
    publicKey  String       @id
    nickname   String?
    score      Int       @default(0)
    LbryUrlMap LbryUrlMap[]
}